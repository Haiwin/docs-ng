			<tgroup cols="2" class="- topic/tgroup " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="tgroup:1;15:21">
				<colspec colname="col1" class="- topic/colspec " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="colspec:1;16:30"/>
				<colspec colname="col2" class="- topic/colspec " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="colspec:2;17:30"/>
				<thead class="- topic/thead " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="thead:1;18:12">
					<row class="- topic/row " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="row:1;19:11">
						<entry colname="col1" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:1;20:14">Argument</entry>
						<entry colname="col2" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:2;21:14">Description</entry>
					</row>
				</thead>
				<tbody class="- topic/tbody " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="tbody:1;24:12">
					<row class="- topic/row " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="row:2;25:11">
						<entry colname="col1" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:3;26:14">clusterMemberHostIp</entry>
						<entry colname="col2" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:4;27:14">Hostname or IP address to
							a member of the cluster the node receiving this POST will be joining.</entry>
					</row>
					<row class="- topic/row " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="row:3;30:11">
						<entry colname="col1" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:5;31:14">clusterMemberPort</entry>
						<entry colname="col2" class="- topic/entry " xtrf="/Users/Ruth/forks/docs-ng/dita/src/ag3/REST/rest-cluster-joinnode.dita" xtrc="entry:6;32:14">Port number for the RESTful interface to the
							system. If your cluster requires
							credentials, provide the administrator username and password.</entry>
					</row>
